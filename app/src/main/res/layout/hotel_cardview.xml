<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/text_view_vertical_margin"
    card_view:cardCornerRadius="1dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_view_vertical_margin">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/hotelImgFile" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hotel Name"
            android:id="@+id/hotelName"
            android:maxLines="2"
            android:ellipsize="end"
            android:textStyle="bold"
            style="@style/Body1Text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hotel Room Type"
            android:id="@+id/hotelRoomType"
            android:maxLines="2"
            android:ellipsize="end"
            style="@style/Body1Text"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:textAppearance="@style/TextAppearance.SessionTitle"
                android:maxLines="3"
                android:ellipsize="end"
                android:id="@+id/hotelStar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/hotelRoomPrice"
                android:textAppearance="@style/TextAppearance.SessionTitle"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="27dp"
                android:layout_marginEnd="27dp" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>